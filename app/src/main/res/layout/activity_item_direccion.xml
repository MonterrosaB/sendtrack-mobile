<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/direccionCard"

    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp"
    app:strokeColor="@color/yellow"

    android:layout_width="200dp"
    android:layout_height="150sp"
    tools:context=".item_direccion">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:orientation="vertical">

      <TextView
          android:id="@+id/lbFullName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="5dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="5dp"
          android:text="Rodrigo Monterrosa"
          android:textColor="@color/blue" />

      <TextView
          android:id="@+id/lbAddress"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="5dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="5dp"
          android:text="Avenida Aguilares 218 San Salvador CP, San Salvador 1101"
          android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"

        android:orientation="horizontal">

      <TextView
          android:id="@+id/lbEdit"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:layout_weight=".5"
          android:linksClickable="true"
          android:text="Editar"
          android:textAlignment="center"
          android:textColor="@color/blue" />

      <View
          android:layout_width="2dp"
          android:layout_height="match_parent"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:background="@color/yellow" />

      <TextView
          android:id="@+id/lbDelete"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="10dp"
          android:layout_weight=".5"
          android:linksClickable="true"
          android:text="Eliminar"
          android:textAlignment="center"
          android:textColor="@color/blue" />

    </LinearLayout>

  </LinearLayout>
  </com.google.android.material.card.MaterialCardView>

