<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/direccionCard"

    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp"
    android:backgroundTint="@color/white"

    android:layout_width="220dp"
    android:layout_height="200dp"
    tools:context=".item_direccion">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:orientation="vertical">

      <TextView
          android:id="@+id/lbFullName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="5dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="5dp"
          android:text="Rodrigo Monterrosa"
          android:textSize="20dp"
          android:textColor="@color/blue"
          android:fontFamily="sans-serif-black"/>

      <TextView
          android:id="@+id/lbAddress"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="5dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="5dp"
          android:text="Avenida Aguilares 218 San Salvador CP, San Salvador 1101"
          android:textSize="20dp"
          android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"

        android:orientation="horizontal">

      <TextView
          android:id="@+id/lbEdit"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:layout_weight=".5"
          android:linksClickable="true"
          android:text="Editar"
          android:textSize="18dp"
          android:textAlignment="center"
          android:textColor="@color/blue"/>

      <View
          android:layout_width="3dp"
          android:layout_height="match_parent"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:background="@color/yellow" />

      <TextView
          android:id="@+id/lbDelete"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="10dp"
          android:layout_weight=".5"
          android:linksClickable="true"
          android:text="Eliminar"
          android:textSize="18dp"
          android:textAlignment="center"
          android:textColor="@color/blue" />

    </LinearLayout>

  </LinearLayout>
</com.google.android.material.card.MaterialCardView>